{
  "volume": {
    /*
     * Sets the global footsteps volume on a value between 0% and 100%
     * Default: 70
     */
    "volume": 70,
    /*
     * Sets the volume of sounds generated due to walking through foliage and brush
     * Default: 50
     */
    "foliageSoundsVolume": 100,
    /*
     * Sets the volume of your own footsteps on a value between 0% and 100%
     * Default: 100
     */
    "clientPlayerVolume": 100,
    /*
     * Sets the volume of passive and friendly mob's footsteps on a value between 0% and 100%
     * Default: 100
     */
    "passiveEntitiesVolume": 100,
    /*
     * Controls how much the footsteps sound changes when running on a percentage range between -100% to +100%
     * Default: 0
     */
    "runningVolumeIncrease": 0,
    /*
     * Sets the volume of sounds generated by walking on wet surfaces during rain or thunderstorms
     * Default: 50
     */
    "wetSoundsVolume": 50,
    /*
     * Sets the volume of hostile mob's footsteps on a value between 0% and 100%
     * Default: 100
     */
    "hostileEntitiesVolume": 100,
    /*
     * Sets the volume of other players' footsteps on a value between 0% and 100%
     * Default: 100
     */
    "otherPlayerVolume": 100
  },
  "debug": {
    /*
     * Enables a visualiser to show where sound/material checks are occuring
     */
    "visualiser": false
  },
  "performance": {
    /*
     * Controls the maximum number of entities the mod can generate footsteps for in a single frame
     * Default: 50
     */
    "maxSteppingEntities": 50
  },
  "sound": {
    /*
     * When enabled, special footstep sounds will be generated matching the boots you are wearing.
     * Note not all types of boots are supported. Modded boots may sound strange or not work.
     */
    "footwear": true,
    /*
     * Sets whether to block vanilla footstep sounds when generating sounds for other entities or players
     */
    "exclusive": false,
    /*
     * Sets whether footsteps should be generated for other (non-player) mobs
     */
    "global": true,
    /*
     * Sets whether footsteps should be generated for other players when in multiplayer
     */
    "multiplayer": true
  },
  "client": {
    /*
     * Controls which group of entities to generate footsteps for
     * Options: ALL, PLAYERS_AND_HOSTILES, PLAYERS_ONLY
     * Default: ALL
     */
    "targetEntities": "ALL",
    /*
     * Disables all functionality of the mod
     */
    "disabled": false,
    /*
     * Sets the player's own stance (type of footsteps to generate
     * Options:
     *   NONE (determined by whether Mine Little Pony is installed)
     *   BIPED (always two-legged)
     *   QUADRUPED (always four-legged)
     *   FLYING (always four-legged + wings)
     *   FLYING_BIPED (always two-legged + wings)
     * Default: NONE
     */
    "stance": "NONE"
  },
  "compatibility": {
    /*
     * A list of entity type for any types of mobs that should never produce footsteps. Usually should be any flying 'bird' mobs.
     * Default: minecraft:ghast, minecraft:happy_ghast, minecraft:phantom
     */
    "ignoredEntityTypes": [
      "minecraft:happy_ghast",
      "minecraft:ghast",
      "minecraft:phantom"
    ]
  }
}